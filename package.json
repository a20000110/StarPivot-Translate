{
  "name": "star-pivot-translate",
  "displayName": "StarPivot Translate",
  "description": "选词翻译，快捷键触发，调用指定接口进行翻译",
  "version": "1.1.0",
  "publisher": "chenjintao",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:starPivotTranslate.translateSelection"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "starPivotTranslate.translateSelection",
        "title": "翻译选区"
      }
    ],
    "keybindings": [
      {
        "command": "starPivotTranslate.translateSelection",
        "key": "shift+alt+t",
        "mac": "shift+alt+t",
        "when": "editorHasSelection && editorTextFocus"
      }
    ],
    "configuration": {
      "title": "StarPivot Translate",
      "properties": {
        "starPivotTranslate.sourceLanguage": {
          "type": "string",
          "default": "zh-Hans",
          "description": "源语言"
        },
        "starPivotTranslate.targetLanguage": {
          "type": "string",
          "default": "en",
          "description": "目标语言"
        },
        "starPivotTranslate.replaceSelection": {
          "type": "boolean",
          "default": false,
          "description": "翻译后替换选区文本"
        },
        "starPivotTranslate.apiUrl": {
          "type": "string",
          "default": "",
          "description": "翻译接口地址"
        },
        "starPivotTranslate.vendor": {
          "type": "string",
          "default": "microsoft",
          "enum": [
            "microsoft",
            "ali"
          ],
          "description": "翻译服务商"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "typecheck": "tsc -p ./",
    "lint": "echo \"No lint configured\"",
    "build": "node scripts/bump-version.js && mkdir -p vsix && vsce package --out vsix --allow-missing-repository"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^18.19.26",
    "@types/vscode": "^1.84.0",
    "@vscode/vsce": "^3.0.0"
  }
}