{
  "name": "star-pivot-translate",
  "displayName": "StarPivot Translate",
  "description": "选词翻译，快捷键触发，调用指定接口进行翻译",
  "version": "0.0.6",
  "publisher": "chenjintao",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:starPivotTranslate.translateSelection"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "starPivotTranslate.translateSelection",
        "title": "翻译选区"
      }
    ],
    "keybindings": [
      {
        "command": "starPivotTranslate.translateSelection",
        "key": "shift+alt+t",
        "mac": "shift+alt+t",
        "when": "editorHasSelection && editorTextFocus"
      }
    ],
    "configuration": {
      "title": "StarPivot Translate",
      "properties": {
        "starPivotTranslate.sourceLanguage": {
          "type": "string",
          "default": "zh-Hans",
          "description": "源语言"
        },
        "starPivotTranslate.targetLanguage": {
          "type": "string",
          "default": "en",
          "description": "目标语言"
        },
        "starPivotTranslate.replaceSelection": {
          "type": "boolean",
          "default": false,
          "description": "翻译后替换选区文本"
        },
        "starPivotTranslate.apiUrl": {
          "type": "string",
          "default": "",
          "description": "翻译接口地址"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "typecheck": "tsc -p ./",
    "lint": "echo \"No lint configured\"",
    "build": "mkdir -p vsix && vsce package --out vsix --allow-missing-repository"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^18.19.26",
    "@types/vscode": "^1.84.0",
    "@vscode/vsce": "^3.0.0"
  },
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a"
}