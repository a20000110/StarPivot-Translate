{
  "name": "star-pivot-translate",
  "displayName": "StarPivot Translate",
  "description": "选词翻译，快捷键触发，调用指定接口进行翻译",
  "version": "1.2.4",
  "publisher": "chenjintao",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:starPivotTranslate.translateSelection"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "keybindings": [
      {
        "command": "starPivotTranslate.translateSelection",
        "key": "shift+alt+t",
        "mac": "shift+cmd+t",
        "when": "editorHasSelection && editorTextFocus"
      },
      {
        "command": "starPivotTranslate.translateFile",
        "key": "shift+alt+t",
        "mac": "shift+cmd+t",
        "when": "filesExplorerFocus"
      }
    ],
    "configuration": {
      "title": "StarPivot Translate",
      "properties": {
        "starPivotTranslate.sourceLanguage": {
          "type": "string",
          "default": "zh-Hans",
          "description": "源语言"
        },
        "starPivotTranslate.targetLanguage": {
          "type": "string",
          "default": "en",
          "description": "目标语言"
        },
        "starPivotTranslate.replaceSelection": {
          "type": "boolean",
          "default": false,
          "description": "翻译后替换选区文本"
        },
        "starPivotTranslate.apiUrl": {
          "type": "string",
          "default": "",
          "description": "翻译接口地址"
        },
        "starPivotTranslate.vendor": {
          "type": "string",
          "default": "microsoft",
          "enum": [
            "microsoft",
            "ali"
          ],
          "description": "翻译服务商"
        },
        "starPivotTranslate.customApiKey": {
          "type": "string",
          "default": "",
          "description": "自定义 API Key (x-custom-api-key)"
        },
        "starPivotTranslate.glossary": {
          "type": "object",
          "default": {},
          "description": "术语表 (源文本 -> 目标文本)"
        }
      }
    },
    "commands": [
      {
        "command": "starPivotTranslate.translateSelection",
        "title": "翻译选区"
      },
      {
        "command": "starPivotTranslate.translateFile",
        "title": "翻译文件名"
      },
      {
        "command": "starPivotTranslate.showHistory",
        "title": "显示翻译历史"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "starPivotTranslate.translateFile",
          "group": "navigation",
          "when": "resourceScheme == file"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "watch": "tsc -watch -p tsconfig.json & tsc-alias -w -p tsconfig.json",
    "typecheck": "tsc -p ./",
    "lint": "echo \"No lint configured\"",
    "build": "node scripts/bump-version.js && mkdir -p vsix && vsce package --out vsix --allow-missing-repository",
    "build:test": "mkdir -p vsix && vsce package --out vsix/star-pivot-translate-1.2.3.vsix --allow-missing-repository"
  },
  "devDependencies": {
    "@types/node": "^18.19.26",
    "@types/vscode": "^1.84.0",
    "@vscode/vsce": "^3.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.6.3"
  }
}